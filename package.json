{
  "name": "devalley",
  "displayName": "Devailey VSCode Assistant",
  "description": "Devailey VSCode Assistant - AI-powered coding companion with inline completions",
  "version": "0.0.5",
  "publisher": "Adroitent",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "AI",
    "Chat",
    "Programming Languages",
    "Machine Learning"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onView:devalley.chatView"
  ],
  "contributes": {
    "commands": [
      {
        "command": "devalley.openAssistant",
        "title": "Open Chat Assistant",
        "category": "Devailey",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "devalley.toggleAssistant",
        "title": "Toggle Chat Panel",
        "category": "Devailey",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "devalley.focusAssistantView",
        "title": "Focus Chat Sidebar",
        "category": "Devailey",
        "icon": "$(comment-discussion)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "devalley.openAssistant",
          "when": "true"
        },
        {
          "command": "devalley.toggleAssistant",
          "when": "true"
        },
        {
          "command": "devalley.focusAssistantView",
          "when": "true"
        }
      ],
      "editor/title": [
        {
          "command": "devalley.toggleAssistant",
          "group": "navigation@100",
          "when": "editorIsOpen"
        }
      ]
    },
    "keybindings": [
      {
        "command": "devalley.toggleAssistant",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devalley",
          "title": "Devailey",
          "icon": "media/adroitent_t.png"
        }
      ]
    },
    "views": {
      "devalley": [
        {
          "id": "devalley.chatView",
          "name": "Devailey Assistant",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc --noEmit && node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "tsc --noEmit && node esbuild.js --production",
    "vscode:prepublish": "npm run package"
  },
  "dependencies": {
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.103.0",
    "esbuild": "^0.25.8",
    "typescript": "^5.9.2"
  }
}
